<script>
  var map = L.map('map').setView([8.913648, -79.544706], 10);

  L.esri.Vector.vectorBasemapLayer('ArcGIS:Topographic', {
    apikey: apiKey // Replace with your API key - https://developers.arcgis.com
  }).addTo(map);
</script>